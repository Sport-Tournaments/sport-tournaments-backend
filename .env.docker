# Docker Compose environment for development
# Copy this file to .env and fill in the values

# App
NODE_ENV=development
PORT=3000

# Database
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=football_user
DB_PASSWORD=football_password
DB_DATABASE=football_tournament
DB_EXTERNAL_PORT=3306
MYSQL_ROOT_PASSWORD=root_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_EXTERNAL_PORT=6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Stripe (get from https://dashboard.stripe.com/)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# AWS S3 (or compatible object storage like Hetzner)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
AWS_S3_BUCKET=football-tournament-files
AWS_S3_ENDPOINT=

# SendGrid (for emails)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@football-tournament.com

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
